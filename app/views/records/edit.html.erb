<%= video_tag "vinyl.mp4", autoplay: :autoplay, loop: :loop, mute: :mute, class: "video" %>
<div class="editrec">
<h3>Edit this record!</h3>

<%= form_for [@user, @record] do |f| %>
        <div>
            <%= f.label :artist %>
        </div>
        <div>
            <%= f.text_field :artist %>
        </div>

        <div>
            <%= f.label :album %>
            </div>
        <div>
            <%= f.text_field :album %>
        </div>

        <div>
            <%= f.label :year %>
            </div>
        <div>
            <%= f.text_field :year %>
        </div>

        <div>
            <%= f.label :image %>
            </div>
        <div>
            <%= f.text_field :image %>
        </div>

        <div>
            <%= f.label :own %>
            <%= f.check_box :own %>
        </div>

    <%= f.submit "Edit Record", class: 'btn btn-primary' %>

<% end %>
<%= link_to "Delete this record!", { action: :destroy, id: @record.id }, method: :delete, data: { confirm: "Are you sure you want to get rid of this record?"}, class: 'btn btn-primary'%>
</div>
