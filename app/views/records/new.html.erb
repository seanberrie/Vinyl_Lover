<h1>Add a new record!</h1>
<div class="container-fluid">
<div class="row">
<div class="col-6">
<%= form_for [:user, @record] do |f| %>

    <div>
        <%= f.label :artist %>
        <%= f.text_field :artist %>
    </div>

    <div>
        <%= f.label :album %>
        <%= f.text_field :album %>
    </div>

    <div>
        <%= f.label :year %>
        <%= f.text_field :year %>
    </div>

    <div>
        <%= f.label :image %>
        <%= f.text_field :image %>
    </div>

    <div>
        <%= f.label :own %>
        <%= f.check_box :own %>
    </div>

    <%= f.submit "Add new Record" %>

<% end %>
</div>
<div class="col-6">
<%= form_tag(new_user_record_path(current_user), :method => 'get') do %>
    <%= label_tag "Serach for a Record:" %>
    <%= search_field_tag "record" %>
    <%= submit_tag "Submit" %>
<% end %>
<% if @search %>
    <% @search.results.each do |r| %>
        <%= form_for [:user, @record] do |f| %>
        <div class="search">
        <p><img src="<%= r.thumb %>"></p>
        <p><%= r.title %></p>
        <p><%= r.year   %></p>
        <%= f.label :own %>
        <%= f.check_box :own %>
        <%= hidden_field_tag :api_record, r.to_param %>
        <%= f.submit "Add new Record" %>
        </div>  
    <% end %>
    <% end %>
<% end %>
</div>
</div>
</div>


<%= link_to "Back to the list!", user_records_path %>