<div class="addback2">
<div class="container-fluid newrec">
<h1>Add a new record!</h1>
<%= form_for [:user, @record] do |f| %>

    <div>
        <%= f.label :artist %>
        <%= f.text_field :artist %>
    </div>

    <div>
        <%= f.label :album %>
        <%= f.text_field :album %>
    </div>

    <div>
        <%= f.label :year %>
        <%= f.text_field :year %>
    </div>

    <div>
        <%= f.label :image %>
        <%= f.text_field :image %>
    </div>

    <div>
        <%= f.label :own %>
        <%= f.check_box :own %>
    </div>

    <p><%= f.submit "Add new Record", class: 'btn btn-primary'%></p>

<% end %>
<%= form_tag(new_user_record_path(current_user), :method => 'get') do %>
    <p><%= label_tag "Serach for a Record:" %></p>
    <%= search_field_tag "record" %>
    <%= submit_tag "Submit", class: 'btn btn-primary'%>
<% end %>
<div class="row">
<% if @search %>
    <% @search.results.each do |r| %>
        <%= form_for [:user, @record] do |f| %>
        <div class="search">
        <p><img src="<%= r.thumb %>"></p>
        <p><%= r.title %></p>
        <p><%= r.year   %></p>
        <%= hidden_field_tag :api_record, r.to_param %>
        <%= f.submit "Add new Record", class: 'btn btn-primary'%>
        </div>  
    <% end %>
    <% end %>
<% end %>
</div>
</div>
</div>