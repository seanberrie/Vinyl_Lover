<div class="addback2">
<div class="container-fluid">
<h1>Add - A - New - Record!</h1>
    <div class="newrecform">
        <div class="manform">
            <%= form_for [:user, @record] do |f| %>

                <div>
                    <%= f.label :artist %>
                    </div>
                    <div>
                    <%= f.text_field :artist %>
                </div>

                <div>
                    <%= f.label :album %>
                    </div>
                    <div>
                    <%= f.text_field :album %>
                </div>

                <div>
                    <%= f.label :year %>
                    </div>
                    <div>
                    <%= f.text_field :year %>
                </div>

                <div>
                    <%= f.label :image %>
                    </div>
                    <div>
                    <%= f.text_field :image %>
                </div>

                <div>
                    <%= f.label :own %>
                    <%= f.check_box :own %>
                </div>

                <p><%= f.submit "Add new Record", class: 'btn btn-primary'%></p>

            <% end %>
        </div>
        <div class="searchform">
            <%= form_tag(new_user_record_path(current_user), :method => 'get') do %>
                <h3><%= label_tag "Search - For - A - Record:" %></h3>
                <%= search_field_tag "record" %>
                <%= submit_tag "Submit", class: 'btn btn-primary'%>
            <% end %>
        </div>
    </div>
<div class="row">
<% if @search %>
    <% @search.results.each do |r| %>
        <%= form_for [:user, @record] do |f| %>
        <div class="search">
        <% if r.thumb != "" %> <img class="img" src="<%= r.thumb %>"> <% end %>
        <p><%= r.title %></p>
        <p><%= r.year   %></p>
        <div class="hideown">
        <%= f.label :own %>
        <%= f.check_box :own %>
        </div>

        <%= hidden_field_tag :api_record, r.to_param %>
        <%= f.submit "Add new Record", class: 'btn btn-primary'%>
        </div>  
    <% end %>
    <% end %>
<% end %>
</div>
</div>
</div>
</div>