<%= video_tag "vinyl.mp4", autoplay: :autoplay, loop: :loop, mute: :mute, class: "video" %>
<div class=" editrec">
    <h1>Edit Account</h1>
    <%= form_for @user do |f| %>  
      <div>
        <%= f.label :username, 'User-name*' %>
        <%= f.text_field :username, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :email, 'Email*' %>
        <%= f.text_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password, 'Password*' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :password_confirmation, 'Confirm Password*', class: 'control-label' %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>

      <%= f.submit 'Edit Account', class: 'btn btn-primary' %>
      <p><%= link_to "Delete Account", { action: :destroy, id: @user.id }, method: :delete, data: { confirm: "Are you sure you want to delete your account"}, class: 'btn btn-primary' %></p>
      <% end %>
  </div>
